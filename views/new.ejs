<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" placeholder="Title of your blog" name="blog[title]"/>    
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" placeholder="Image Link" name="blog[image]"/>    
        </div>
        <div class="field">
            <label>Blog content</label>
            <textarea name="blog[body]" placeholder="Blog Post goes here"></textarea>  
        </div>
        <input type="submit" class="ui secondary button"/>
    </form>
</div>
<% include partials/footer %>