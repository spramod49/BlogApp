<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" placeholder="Title of your blog" name="blog[title]" value="<%= blog.title%>"/>    
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" placeholder="Image Link" name="blog[image]" value="<%= blog.image%>"/>    
        </div>
        <div class="field">
            <label>Blog content</label>
            <textarea name="blog[body]" placeholder="Blog Post goes here"><%= blog.body %></textarea>  
        </div>
        <input type="submit" class="ui secondary button"/>
    </form>
</div>

<% include partials/footer %>